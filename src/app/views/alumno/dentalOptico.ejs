<% include ../partials/head.ejs %>
<% include ../partials/navegacion.ejs %>
	<div class="container">
		<div class="row">
		<div class="col-md-12 mt-4 card">
				<form action="/controlDentalOptico" method="POST" class="card-body">
					<h3 class="card-title">Nuevo Registro Dental y Optico</h3>
					<div class="form-group">
						<input type="text" name="nombre" class="form-control" placeholder="Nombre completo del alumno" data-toggle="tooltip" data-placement="top" title="Alumno a registrar debe estar dado de alta en el sistema" autofocus required>							
					</div>					
					<div class="form-row">
						<div class="form-group col-md-6">
							<input type="text" name="dxdental" class="form-control" placeholder="DxDental">
						</div>
						<div class="form-group col-md-6">
							<input type="text" name="dxoptico" class="form-control" placeholder="DxOptico">
						</div>											
					</div>
					<!--
					<div class="form-row">
						<div class="form-group col-md-2">
							Atencion
						</div>						
						<div class="form-group col-md-5">
							<input class="form-check-input" type="radio" name="atencion" id="Si" value="1" checked>
							<label class="form-check-label" for="Si">
								Si
							</label>								
						</div>
						<div class="form-group col-md-5">
							<input class="form-check-input" type="radio" name="atencion" id="No" value="0">
							<label class="form-check-label" for="No">
								No
							</label>													
						</div>							
					</div>
					-->
					<div class="form-group">
						<input type="text" name="observacion" class="form-control" placeholder="Observacion">
					</div>
					<div class="form-row">
						<div class="form-group col-md-4">
							<input type="text" name="cicloescolar" class="form-control" placeholder="Ciclo Escolar">
						</div>
						<div class="form-group col-md-4">
							<input type="date" name="fecha" class="form-control">													
						</div>
						<div class="form-group col-md-4">
							<button type="submit" class="btn btn-success">Guardar</button>										
						</div>						
					</div>															
				</form>
			</div>			
			<div class="col-md-12 mt-4 text-center">
				<table class="table table-striped">
					<tr>
						<th>Nombre</th>
						<th>DxDental</th>
						<th>DxOptico</th>
						<th>Observacion</th>
					</tr>
					<% for (var i = 0; i < alumno.length; i++) {%>
						<tr>
							<td><%=alumno[i].nombre%></td>
							<td><%=alumno[i].dxdental%></td>
							<td><%=alumno[i].dxoptico%></td>
							<td><%=alumno[i].observacion%></td>
						</tr>
					<%}%>
				</table>
			</div>
		</div>		
	</div>
<% include ../partials/footer.ejs %>
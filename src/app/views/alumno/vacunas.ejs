<% include ../partials/head.ejs %>
<% include ../partials/navegacion.ejs %>
	<div class="container">
		<div class="row">
		<div class="col-md-12 mt-4 card">
				<form action="/controlVacunas" method="POST" class="card-body">
					<h3 class="card-title">Nuevo Registro Vacunaci√≥n</h3>
					<div class="form-group">
						<input type="text" name="nombre" class="form-control" placeholder="Nombre completo del alumno" data-toggle="tooltip" data-placement="top" title="Alumno a registrar debe estar dado de alta en el sistema" autofocus required>							
					</div>					
					<div class="form-group">
						<input type="text" name="tipovacuna" class="form-control" placeholder="Tipo de vacuna">
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<input type="date" name="fecha" class="form-control">
						</div>
						<div class="form-group col-md-6">
							<button type="submit" class="btn btn-success">Guardar</button>																	
						</div>
					</div>														
				</form>
			</div>			
			<div class="col-md-12 mt-4 text-center">
				<table class="table table-striped">
					<tr>
						<th>Nombre</th>
						<th>Tipo Vacuna</th>
						<th>Fecha</th>
					</tr>
					<% for (var i = 0; i < alumno.length; i++) {%>
						<tr>
							<td><%=alumno[i].nombre%></td>
							<td><%=alumno[i].tipovacuna%></td>
							<td><%=alumno[i].fecha%></td>
						</tr>
					<%}%>
				</table>
			</div>
		</div>		
	</div>
<% include ../partials/footer.ejs %>
<% include ../partials/head.ejs %>
    <section class="container">
      <h1 class="display-4 my-2">Edición</h1>
      <p class="lead">Edición de profesores en CENDI#4</p>
      <form method = "POST" action="/actualizarProfesor/<%=profesor[0].idprofesor%>" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-2">
          <label for="folio">Folio</label>
          <input type="text" class="form-control" id="folio" name="folio" value="<%=profesor[0].folio%>" placeholder="Folio" autofocus required="true">
        </div>
        <div class="form-group col-md-10">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" value="<%=profesor[0].nombre%>" placeholder="Nombre">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-2">
          <label for="sexo">Sexo</label>
          <select id="sexo" class="form-control" name="sexo">
            <% if (profesor[0].sexo == 1) {%>
              <option value="1" selected>Masculino</option>
              <option value="0">Femenino</option>
            <%} else { %>
              <option value="1">Masculino</option>
              <option value="0" selected>Femenino</option>
            <%}%>
          </select>
        </div>
        <div class="form-group col-md-10">
          <label for="domicilio">Domicilio</label>
          <input type="text" class="form-control" id="domicilio" name="domicilio" value="<%=profesor[0].domicilio%>" placeholder="Domicilio...">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="fechaNac">Fecha de Nacimiento</label>
          <input type="date" class="form-control" id="fechaNac" name="fechaNacimiento" value="<%=profesor[0].fechaNacimiento%>">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="fechaIng">Fecha de Ingreso</label>
          <input type="datetime-local" class="form-control" id="fechaIng" name="fechaIngreso" value="<%=profesor[0].fechaIngreso%>">
        </div>
        <div class="form-group col-md-4">
          <label for="foto">Subir foto...</label>
            <input type="file" class="form-control-file" id="foto" name="foto" value="<%=profesor[0].foto%>">         
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-2">  
          <img src="../imagesProfesores/<%=profesor[0].foto%>" height="211" width="180">
        </div>
      </div>        
      <button type="submit" class="btn btn-success">Editar</button>
      </form>
    </section>
<% include ../partials/footer.ejs %>
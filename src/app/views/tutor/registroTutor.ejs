<% include ../partials/head.ejs %>
<% include ../partials/navegacion.ejs %>
    <section class="container">
      <h1 class="display-4 my-2">Registro</h1>
      <p class="lead">Registro de Tutores</p>
      <form method = "POST" action="/registroTutor"  enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-2">
          <label for="parentesco">Parentesco</label>
          <select id="parentesco" class="form-control" name="parentesco">
            <option>Madre</option>
            <option>Padre</option>
            <option>Otro</option>
          </select>
        </div>
        <div class="form-group col-md-10">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="domicilio">Domicilio</label>
          <input type="text" class="form-control" id="domicilio" name="domicilio" placeholder="Domicilio...">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="fechaNac">Fecha de Nacimiento</label>
          <input type="date" class="form-control" id="fechaNac" name="fechaNacimiento">
        </div>
        <div class="form-group col-md-3">
          <label for="telefono">Telefono</label>
          <input type="text" class="form-control" id="telefono" name="telefono">
        </div>
        <div class="form-group col-md-6">
          <label for="correo">Correo</label>
          <input type="email" class="form-control" id="correo" name="correo">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="foto">Subir foto...</label>
          <input type="file" class="form-control-file" id="foto" name="foto">
        </div>
        <div class="form-group col-md-6">
          <label for="escolaridad">Escolaridad</label>
          <select id="escolaridad" class="form-control" name="escolaridad">
            <option>Educacion Basica</option>
            <option>Educacion Media Superior</option>
            <option>Superior</option>
            <option>Posgrado</option>
          </select>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="idAlumno">Seleccione Hijo(a)</label>
          <select id="idAlumno" class="form-control" name="alumno_idalumno">
            <% if (alumno.length == 0) {%>
              <option value="0">No existen alumnos registrados</option>
            <%} else {%>
              <% if(alumno.length < 5) {%>
                <% for (var i = 0; i < alumno.length; i++) {%>
                  <option value="<%=alumno[i].idalumno%>"><%= alumno[i].nombre%></option>
                <%}%> 
                <%}else {%>
                    <% for (var i = alumno.length-5; i < alumno.length; i++) {%>
                      <option value="<%=alumno[i].idalumno%>"><%= alumno[i].nombre%></option>
                    <%}%>
                <%}%>
            <%}%>
          </select>
        </div>
      </div>
      <% if(alumno.length != 0 ) {%>
        <button type="submit" class="btn btn-success">Guardar</button>
      <% }else { %>
        <button type="submit" class="btn btn-outline-danger" disabled>Guardar</button>
      <%}%>
      </form>
    </section>
<% include ../partials/footer.ejs %>
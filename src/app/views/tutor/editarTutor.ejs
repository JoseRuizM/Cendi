<% include ../partials/head.ejs %>
    <section class="container">
      <h1 class="display-4 my-2">Edición</h1>
      <p class="lead">Edición de tutores</p>
      <form method = "POST" action="/actualizarTutor/<%=tutor[0].idtutor%>" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-2">
          <label for="parentesco">Parentesco</label>
          <select id="parentesco" class="form-control" name="parentesco">
            <% if (tutor[0].parentesco == 'Madre') {%>
              <option selected>Madre</option>
              <option>Padre</option>
              <option>Otro</option>
            <%} else if (tutor[0].parentesco == 'Padre') { %>
              <option>Madre</option>
              <option selected>Padre</option>
              <option>Otro</option>
            <%} else { %>
              <option>Madre</option>
              <option>Padre</option>
              <option selected>Otro</option>
            <%}%>            
          </select>
        </div>
        <div class="form-group col-md-10">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" value="<%=tutor[0].nombre%>"  placeholder="Nombre">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="domicilio">Domicilio</label>
          <input type="text" class="form-control" id="domicilio" name="domicilio" value="<%=tutor[0].domicilio%>" placeholder="Domicilio...">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="fechaNac">Fecha de Nacimiento</label>
          <input type="date" class="form-control" id="fechaNac" name="fechaNacimiento" value="<%=tutor[0].fechaNacimiento%>">
        </div>
        <div class="form-group col-md-3">
          <label for="telefono">Telefono</label>
          <input type="text" class="form-control" id="telefono" name="telefono" value="<%=tutor[0].telefono%>">
        </div>
        <div class="form-group col-md-6">
          <label for="correo">Correo</label>
          <input type="email" class="form-control" id="correo" name="correo" value="<%=tutor[0].correo%>">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="foto">Subir foto...</label>
          <input type="file" class="form-control-file" id="foto" name="foto" value="<%=tutor[0].foto%>">
          <br>
          <img src="../imagesTutores/<%=tutor[0].foto%>" height="211" width="180">         
        </div>            
        <div class="form-group col-md-6">
          <label for="escolaridad">Escolaridad</label>
          <select id="escolaridad" class="form-control" name="escolaridad">
            <% if (tutor[0].escolaridad == 'Educacion Basica') {%>
              <option selected>Educacion Basica</option>
              <option>Educacion Media Superior</option>
              <option>Superior</option>
              <option>Posgrado</option>
            <%} else if (tutor[0].escolaridad == 'Educacion Media Superior') { %>
              <option>Educacion Basica</option>
              <option selected>Educacion Media Superior</option>
              <option>Superior</option>
              <option>Posgrado</option>
            <%} else if (tutor[0].escolaridad == 'Superior') { %>
              <option>Educacion Basica</option>
              <option>Educacion Media Superior</option>
              <option selected>Superior</option>
              <option>Posgrado</option>
            <%} else { %>
              <option>Educacion Basica</option>
              <option>Educacion Media Superior</option>
              <option>Superior</option>
              <option selected>Posgrado</option>              
            <%}%>
          </select>
        </div>
      </div>
